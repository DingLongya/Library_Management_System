            android:name=".RegisterActivity"
            android:label=""
            android:launchMode="singleTask" />
        <activity
            android:name=".ServiceActivity"
            android:label=""
            android:launchMode="singleTask" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>